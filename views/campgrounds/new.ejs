<% layout("/layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form
      action="/campgrounds"
      method="POST"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          placeholder="New Campground"
          name="campground[title]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
          Please give a title for the campground.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          placeholder="Campground Location"
          name="campground[location]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
          Please give a location for the campground.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          placeholder="Campground Image"
          name="campground[image]"
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
          Please give a image for the campground.
        </div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          placeholder="Campground description"
          name="campground[description]"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">
          Please give a description for the campground.
        </div>
      </div>

      <div>
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            id="price"
            type="number"
            class="form-control"
            placeholder="Amount (to the nearest dollar)"
            name="campground[price]"
            required
          />

          <span class="input-group-text">.00</span>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">
            Please give a price for the campground.
          </div>
        </div>
      </div>

      <div class="mt-3">
        <button class="btn btn-success">Add Campground</button>
        <a class="btn btn-primary" href="/campgrounds"
          >Back to All Campground</a
        >
      </div>
    </form>
  </div>
</div>
