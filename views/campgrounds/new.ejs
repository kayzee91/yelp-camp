<% layout("/layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">New Campground</h1>
  <div class="col-6 offset-3">
    <form action="/campgrounds" method="POST">
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          placeholder="New Campground"
          name="campground[title]"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          placeholder="Campground Location"
          name="campground[location]"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Image URL</label>
        <input
          class="form-control"
          type="text"
          id="image"
          placeholder="Campground Image"
          name="campground[image]"
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          placeholder="Campground description"
          name="campground[description]"
        ></textarea>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            id="price"
            type="text"
            class="form-control"
            placeholder="Amount (to the nearest dollar)"
            name="campground[price]"
          />
          <span class="input-group-text">.00</span>
        </div>
      </div>

      <div class="mt-3">
        <button class="btn btn-success">Add Campground</button>
        <a class="btn btn-primary" href="/campgrounds"
          >Back to All Campground</a
        >
      </div>
    </form>
  </div>
</div>
