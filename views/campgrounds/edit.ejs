<% layout("/layouts/boilerplate") %>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-md-6 offset-md-3">
    <form
      action="/campgrounds/<%= campground._id %>?_method=PUT "
      method="POST"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <label class="form-label" for="title">Title</label>
        <input
          class="form-control"
          type="text"
          id="title"
          placeholder="New Campground"
          name="campground[title]"
          value="<%= campground.title %> "
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please give a title for the campground.</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          placeholder="Campground Location"
          name="campground[location]"
          value="<%= campground.location %> "
          required
        />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please give a location for the campground.</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="image">Add images</label>
        <input class="form-control" type="file" id="image" placeholder="Campground Image" name="image" multiple />
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please give a image for the campground.</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          placeholder="Campground description"
          name="campground[description]"
          required
        >
<%=campground.description%></textarea
        >
        <div class="valid-feedback">Looks good!</div>
        <div class="invalid-feedback">Please give a description for the campground.</div>
      </div>

      <div class="mb-3">
        <label class="form-label" for="price">Price</label>
        <div class="input-group">
          <span class="input-group-text">$</span>
          <input
            id="price"
            type="text"
            class="form-control"
            placeholder="Amount (to the nearest dollar)"
            name="campground[price]"
            value="<%= campground.price %> "
            required
          />
          <span class="input-group-text">.00</span>
          <div class="valid-feedback">Looks good!</div>
          <div class="invalid-feedback">Please give a price for the campground.</div>
        </div>
      </div>
      <h6 class="text-danger">Delete Images</h6>
      <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
        <% campground.images.forEach(function(img, i) { %>
        <div class="col">
          <div class="card">
            <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="" />
            <div class="form-check-inline card-img-overlay text-end pt-1 pe-2">
              <label class="visually-hidden" for="image-<%=i%>">Delete</label>
              <input
                type="checkbox"
                id="image-<%=i%>"
                name="deleteImages[]"
                value="<%=img.filename%>"
                class="form-check-input"
              />
            </div>
          </div>
        </div>
        <% })%>
      </div>

      <div class="mt-3">
        <button class="btn btn-success">Update Campground</button>
        <a class="btn btn-primary" href="/campgrounds">Back to All Campground</a>
      </div>
    </form>
  </div>
</div>
